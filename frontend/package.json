{
  "name": "frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn css:build && next build",
    "start": "next start",
    "lint": "next lint",
    "css:dev": "TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch",
    "css:build": "postcss ./styles/tailwind.css -o ./styles/globals.css",
    "tailwind-storybook": "postcss ./styles/tailwind.css -o ./public/non-fungible-apes/tailwind.storybook.css",
    "tailwind-storybook:dev": "TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./public/non-fungible-apes/tailwind.storybook.css",
    "tailwind-storybook-build": "NODE_ENV=production postcss ./styles/tailwind.css -o ./storybook-static/non-fungible-apes/tailwind.storybook.css",
    "storybook": "yarn run tailwind-storybook && start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public -o design-system && yarn run tailwind-storybook-build"
  },
  "dependencies": {
    "@next/mdx": "^12.0.4",
    "@usedapp/core": "^0.6.3",
    "ethers": "^5.5.1",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@next/plugin-storybook": "^12.0.4",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "postcss": "^8.4.1",
    "postcss-cli": "^9.0.2",
    "react-docgen-typescript": "^2.1.1",
    "tailwindcss": "^2.2.19",
    "typescript": "4.5.2"
  }
}
